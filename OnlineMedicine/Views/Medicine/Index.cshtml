@model OnlineMedicine.ViewModels.MedicineListModel

@{
    ViewData["Title"] = "Home";
    List<Medicine> medicines = Model.Medicines;
    List<Category> categories = Model.Categories;
    List<Country> countries = Model.Countries;
}
<style>
    /* styles.css */
    /* Global Styles */
    body {
        font-family: 'Arial', sans-serif;
        background-color: #f7f7f7;
        color: #333;
    }

    h1 {
        text-align: center;
        margin-bottom: 20px;
    }

    img {
        max-width: 100%;
        height: auto;
    }

    /* Form Styles */
    form {
        background: #ffffff;
        padding: 20px;
        border-radius: 8px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

        form h4 {
            margin-top: 20px;
            font-weight: bold;
        }

        form input[type="text"], form select {
            width: 100%;
            padding: 10px;
            margin-top: 10px;
            border: 1px solid #ccc;
            border-radius: 4px;
        }

        form input[type="checkbox"] {
            margin-right: 10px;
        }

        form input[type="submit"] {
            background-color: #007bff;
            color: #fff;
            border: none;
            border-radius: 4px;
            padding: 10px 20px;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }

            form input[type="submit"]:hover {
                background-color: #0056b3;
            }

    /* Card Styles */
    .card {
        background: #fff;
        border: none;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .card:hover {
            transform: translateY(-10px);
            box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
        }

        .card img {
            border-top-left-radius: 8px;
            border-top-right-radius: 8px;
        }

    .card-title {
        font-size: 1.25rem;
        font-weight: bold;
        margin-top: 10px;
        margin-bottom: 10px;
    }

    .card-text {
        font-size: 0.95rem;
        color: #555;
    }

    .card .btn {
        background-color: #007bff;
        border: none;
        border-radius: 4px;
        padding: 10px 20px;
        color: #fff;
        text-align: center;
        cursor: pointer;
        transition: background-color 0.3s ease;
    }

        .card .btn:hover {
            background-color: #0056b3;
        }

</style>


<h1>
    Welcome to
    <img src="https://i.ibb.co/pQQBjHp/logo-clean.png" />
</h1>
<hr />
<div class="row">
    <div class="col-3">
        <form asp-action="Index" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <h4>Keyword:</h4>
            <div class="form-group mb-3">
                <input type="text" asp-for="SearchKeyword" placeholder="Name, Descript, Country,..." />
                <span asp-validation-for="SearchKeyword" class="text-danger"></span>
            </div>
            <h4>Category:</h4>
            @foreach (var item in categories)
            {
                <label>
                    <input type="checkbox" name="CategoryIds" value="@item.Id"
                    @(Model.CategoryIds != null && Model.CategoryIds.Contains(item.Id) ? "checked" : "") />
                    @item.Name
                </label>
                <br />
            }
            <h4>Country:</h4>
            <select name="countryId">
                @if (Model.CountryId == 0)
                {
                    <option value="0" selected>All</option>
                }
                else
                {
                    <option value="0">All</option>
                }
                @foreach (var i in countries)
                {
                    @if (Model.CountryId == i.Id)
                    {
                        <option value="@i.Id" selected>@i.Name</option>
                    }
                    else
                    {
                        <option value="@i.Id">@i.Name</option>
                    }
                }
            </select>

            <h4>Order by name:</h4>
            <select name="sortType">

                <option value="0" selected>Ascending</option>
                @if (Model.SortType == 1)
                {
                    <option value="1" selected>Decending</option>
                }
                else
                {
                    <option value="1">Decending</option>

                }

            </select>
            <input class="btn btn-outline-secondary mt-3" type="submit" value="Filter" style="display:block" />
        </form>
    </div>
    <div class="col-9 row">
        @foreach (var item in medicines)
        {
            <div class="card col-lg-4 col-md-6 col-sm-12 mb-4" style="width: 18rem; margin-right: 2%">
                <img class="card-img-top" src="@item.Image" alt="Meidicine">
                <div class="card-body">
                    <h5 class="card-title" style="height:48px; text-align:center">@item.Name</h5>
                    <p class="card-text" style="max-height: 120px; overflow:hidden">@item.Descript</p>
                    <a class="btn btn-primary" asp-action="Details" asp-route-id="@item.Id">Details</a>
                </div>
            </div>
        }
    </div>
</div>



